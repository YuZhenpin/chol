#!/bin/bash

#Configure proper user for a cloud desktop instance 
#Usage:  set-user username "Full Name" e-mail
#Pre-requisites: git installed 

if [ "$#" -ne 3 ]; then
    echo "Usage: set-user username \"Full Name\"" e-mail
    exit 1 
fi

cd  
sudo sed "s/localhost/localhost `hostname`/" -i /etc/hosts 
sudo adduser --disabled-password --ingroup sudo --ingroup docker --gecos "$2" $1
sudo cp -r .ssh /home/$1
sudo chown $1 /home/$1/.ssh
sudo chown $1 /home/$1/.ssh/authorized_keys
sudo cp ./.Xauthority /home/$1
sudo chown $1 /home/$1/.Xauthority

if [[ "$3" == ?*@?* ]] ; then
 email=$3 
else if [[ "$1" == ?*.com ]] ; then
 email="$1@$3" 
else
 email="$1@$3.com" 
fi
fi

git config --global --add user.name "$2"
git config --global --add user.email "$email"

sudo reboot



